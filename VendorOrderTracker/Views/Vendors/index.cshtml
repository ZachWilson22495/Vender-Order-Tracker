@using VendorOrderTracker.Models;

<hi>Vendor List</h1>
@if (Model.Count == 0)
{
  <p>"No vendors to list at this time."</p>
}
<ul>
  @foreach (Vendor vendor in Model)
  {
    <li><a href='/vendors@vendor.Id'>@vendor.Name</a></li>
  }
</ul>

<a href="/vendors/new">Add a new vendor.</a>

<form action="/vendors/delete" method="post">
  <button type="submit" name="button">Delete All Vendors</button>
</form>
