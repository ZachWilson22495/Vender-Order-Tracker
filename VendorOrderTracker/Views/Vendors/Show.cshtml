@using VendorOrderTracker.Models;

<h2>@Model["vendor"].Name</h2>
<h4>@Model["vendor"].Description</h4>

<h3>Their order history is as follows:</h3>

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.OrderId'>@order.OrderName</a></li>
}
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
<p><a href='/vendors'>Return to list of Vendors</a></p>
<p><a href='/'>Return to Main Menu</a></p>