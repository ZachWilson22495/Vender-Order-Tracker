@using VendorOrderTracker.Models;

<hi>Order List</h1>
@if (Model.Count == 0)
{
  <p>"No orders to list at this time."</p>
}
<ul>
  @foreach (Order order in Model)
  {
    <li><a href='/orders@order.Id'>@order.Name</a></li>
  }
</ul>

<a href="/orders/new">Add a new order.</a>

<form action="/orders/delete" method="post">
  <button type="submit" name="button">Delete All Orders</button>
</form>
